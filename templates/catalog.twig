<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <title>{{ title }}</title>
  </head>
  <body>
    <header>
      {% include 'navbar.twig' %}
    </header>
    <main>
      <div class="container">
        <div class="row">
          {% if total_pages %}
          <div class="row" id="page-content">
          </div>
          {% else %}
            <b>Список товаров пуст</b>
          {% endif %}
        </div>
        <div class="row">
          <nav aria-label="Page navigation example">
            <ul class="pagination" id="page">
            </ul>
          </nav>
        </div>
      </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>
      'use strict'
      let content = document.getElementById("page-content")
      document.addEventListener("DOMContentLoaded", function(event) {
        let i = 0;
        while (i < {{total_pages}}) {
          let viewPage = document.getElementById("page");
          let tagLi = document.createElement("li");
          let tagA = document.createElement("a");
          let text = document.createTextNode(i+1);
          tagLi.classList.add("page-item");
          tagA.classList.add("page-link");
          tagA.setAttribute("href", "#");
          tagA.setAttribute("onClick", "postData("+(i+1)+")");
          tagLi.appendChild(tagA)
          tagA.appendChild(text);
          viewPage.appendChild(tagLi);
          i++;
        }

        fetch( 'fetchData.php')
          .then(res => {return res.text()})
          .then(data => {
            content.insertAdjacentHTML("afterbegin", data);
          })
        })

      function postData(data) {
        let formData = new FormData();
        formData.set('page', parseInt(data))
        content.innerHTML = '';
        fetch( 'fetchData.php', {
          method: 'POST',
          body: formData,
        })
          .then(res => {return res.text()})
          .then(data => {
            content.insertAdjacentHTML("afterBegin", data);
            console.log(data)
          })
        }
    </script>
  </body>
</html>